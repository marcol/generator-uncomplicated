{
  "name": "generator-uncomplicated",
  "version": "1.6.0",
  "description": "Uncomplicated Yeoman generator for quick web projects",
  "keywords": [
    "CSS",
    "HTML",
    "basic",
    "fast",
    "javascript",
    "simple",
    "uncomplicated",
    "git",
    "linting",
    "eslint",
    "lint",
    "web",
    "jest",
    "yeoman-generator"
  ],
  "scripts": {
    "lint": "yarn lint:js && yarn lint:md && yarn lint:css",
    "lint:css": "stylelint **/*.html **/*.css",
    "lint:js": "eslint .",
    "lint:md": "remark .",
    "test": "jest __tests__/index.test.js",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "bugs": "https://github.com/marcol/generator-uncomplicated/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcol/generator-uncomplicated.git"
  },
  "private": false,
  "license": "ISC",
  "files": [
    "generators"
  ],
  "dependencies": {
    "sugar-chalk": "^1.6.5",
    "yeoman-generator": "^4.13.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "eslint": "^7.26.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.6",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-markdown": "^2.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "pinst": "^2.1.4",
    "remark-cli": "^9.0.0",
    "remark-lint": "^8.0.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^6.0.0"
  },
  "resolutions": {
    "**/lodash": "^4.17.21"
  }
}
