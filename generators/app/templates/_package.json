  "scripts": {
    "lint": "yarn lint:js && yarn lint:md && yarn lint:css",
    "lint:css": "stylelint **/*.html **/*.css",
    "lint:js": "eslint .",
    "lint:md": "remark .",
    "serve": "yarn start",
    "start": "<% if (hasWebpack) { %>webpack-dev-server --open --config webpack.dev.js<% } else { %>static-server --port 8080 source/<% } %>",
    "build": "<% if (hasWebpack) { %>webpack --config webpack.prod.js<% } %>",
    "test": "<% if (hasJest) { %>jest<% } %>"
  },
  "dependencies": {},
  "devDependencies": {}<% if (hasJest) { %>,
  "overrides": [
    {
      "files": [
        "**/__tests__/*?(.test|.spec).{j,t}s?(x)",
        "**/tests/*?(.test|.spec).{j,t}s?(x)"
      ],
      "env": {
        "jest/globals": true
      }
    }
  ]<% } %>
}
